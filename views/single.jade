doctype html
html
    head
        title = "I Need Help for Comm3323"
        script(src='http://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js')
        script(src='http://uhmultimedia-twitter-092013.herokuapp.com/socket.io/socket.io.js')
        script(src='/socketQueue.js')
        script(src='/uhtwitter.js')

    body
        h1	COMM3323 Help Queue
        form(action='/postTweet', method='post')
              input.field(id='firstName' name='firstName', value='firstName')
              input.field(id='lastName' name='lastName', value='lastName')
              input.send(type='button', id="send", value='I need help')
        ol(id='tweetlist')
         each tweet in tweets
          li #{tweet.text} ... #{tweet.dateF}
        h1 BEEN HELPED
        form(action='/postBeenHelped', method='post')
            input.field(id='expertName' name='expertName', value="Helper's full name")
            = ' helped '
            input.field(id='noviceName' name='noviceName', value='Your full name')
            input.send(type='button', id="helpedBtn", value='Thanks for the help')
        ol(id='helpedList')

